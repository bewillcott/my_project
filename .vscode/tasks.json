{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "rust: cargo doc",
			"group": "build",
			"type": "cargo",
			"command": "doc",
			"args": [
				"--no-deps",
				"--workspace"
			],
			"problemMatcher": [
				"$rustc"
			]
		},
		{
			"label": "rust: cargo doc (dev)",
			"group": "build",
			"type": "cargo",
			"command": "doc",
			"args": [
				"--no-deps",
				"--workspace",
				"--document-private-items"
			],
			"problemMatcher": [
				"$rustc"
			]
		},
		// {
