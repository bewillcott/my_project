		// 	},
		// 	"problemMatcher": [
		// 		"$rustc"
		// 	]
		// },
		{
			"label": "rust: cargo build",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"type": "cargo",
			"command": "build",
			"problemMatcher": [
				"$rustc"
			]
		},
		{
			"label": "rust: cargo clean",
			"group": "build",
			"type": "cargo",
			"command": "clean",
			"problemMatcher": [
				"$rustc"
			]
		},
		{
			"label": "rust: cargo clippy",
			"group": "test",
			"type": "process",
			"command": "cargo",
			"args": [
				"clippy"
			],
			"problemMatcher": [
				"$rustc"
			]
		},
		{
			"label": "rust: cargo miri test",
			"group": "test",
			"type": "process",
			"command": "cargo",
			"options": {
				"env": {
					"MIRIFLAGS": "-Zmiri-backtrace=0 -Zmiri-disable-isolation"
				}
			},
			"args": [
				"+nightly-2025-07-06",
				"miri",
				"test"
			],
			"problemMatcher": [
				"$rustc"
			]
		},
		{
			"label": "bacon llvm-cov",
			"type": "process",
			"command": "bacon",
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
			"args": [
				"llvm-cov"
			]
		},
		{
			"label": "cargo llvm-cov html",
			"type": "process",
			"command": "cargo",
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
			"args": [
				"llvm-cov",
				"nextest",
				"--html"
			]
		},
		{
			"label": "mdbook build guide",
			"type": "process",
			"command": "mdbook",
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
			"args": [
				"build",
				"guide"
			]
		},
		{
			"label": "mdbook serve guide",
			"type": "process",
			"command": "mdbook",
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
			"args": [
				"serve",
				"guide"
			]
		},
		{
			"label": "mdbook serve guide --open",
			"type": "process",
			"command": "mdbook",
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
			"args": [
				"serve",
				"guide",
				"--open"
			]
		}
	]
}